<a href="/movies">Back to movies</a>
{{#with movie}}
<h2>{{title}}</h2>
<p> by: {{director}}</p>
<img src="{{image}}" alt="{{title}}">
<h3>Stars</h3>
<ul>
    {{#each stars}}
    <li>{{this}}</li>
    {{/each}}
</ul>
<p>Description: {{description}}</p>

<h3>Showtimes</h3>
<ul>
    {{#each showtimes}}
    <li>{{this}}</li>
    {{/each}}
</ul>

<a href="/movies/{{_id}}/edit"> Edit this movie</a>

{{/with}}

