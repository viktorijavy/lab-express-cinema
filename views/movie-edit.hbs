<h1> Edit the movie {{movie.title}}</h1>

<form action="/movies/{{movie._id}}/edit" method="POST">
<label for="title">Title</label>
<input type="text" name="title" id="title" value={{movie.title}}>

<label for="director">Director</label>
<input type="text" name="director" id="director" value={{movie.director}}>

<label for="description">Description</label>
<textarea name="description" id="description">{{movie.description}}</textarea>

<label for="stars">Stars</label>
<input type="text" id="stars" name="stars" value={{movie.stars}}>
<input type="text" id="stars" name="stars" value={{movie.stars}}>
<input type="text" id="stars" name="stars">

<label for="image">Image</label>
<input type="text" name="image" id="image" value={{movie.image}}>

<label for="showtimes">Showtimes</label>
<input type="time" id="showtimes" name="showtimes" value={{movie.showtimes}}>
<button type="submit">Submit</button>
</form>